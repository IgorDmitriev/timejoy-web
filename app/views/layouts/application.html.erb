<!DOCTYPE html>
<html>
  <head>
    <title>TimeJoy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <script type="text/javascript">
      <% if current_user %>
        window.currentUser = <%= render(
          'api/users/user.json.jbuilder',
          user: current_user
        ).html_safe %>
      <% end %>
    </script>

    <%= yield %>
  </body>
</html>
